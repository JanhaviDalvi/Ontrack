        <h1 class="text-center my-3">Ontrack - Kanban Board</h1>
        <br>
        <select id="sort-select">
            <option value="">Select Sort By</option>
            <option value="priority">Priority</option>
            <option value="due-date">Due Date</option>
        </select>

        <div class="row">
            <!-- todo -->
            <div class="col-4">
                <h2>To-Do</h2>
                <div class="column-box" id="todo_column">

                </div>
            </div>
            <!-- in progress -->
            <div class="col-4">
                <h2>In Progress</h2>
                <div class="column-box" id="inprogress_column">

                </div>
            </div>
            <!-- completed column -->
            <div class="col-4">
                <h2>Completed</h2>
                <div class="column-box" id="completed_column">

                </div>
            </div>
        </div>

        <!-- Modal -->
        <div style="margin-top: 20px;"></div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add Task
        </button>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Card</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="kanban_form">
                            <div class="form-group">
                                <label for="cardName" class="col-form-label">Card Name:</label>
                                <input type="text" class="form-control" id="cardName">
                            </div>
                            <div class="form-group">
                                <label for="cardDescription" class="col-form-label">Card Description:</label>
                                <textarea class="form-control" id="cardDescription"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="cardTag" class="col-form-label">Card Tag:</label>
                                <input type="text" class="form-control" id="cardTag">
                            </div>
                            <div class="form-group">
                                <label for="cardPriority" class="col-form-label">Card Priority:</label>
                                <select class="form-control" id="cardPriority">
                                    <option value="3">High</option>
                                    <option value="2">Medium</option>
                                    <option value="1">Low</option>
                                </select>
                            </div>
                            <!-- <div class="form-group">
                                <label for="cardCreationDate" class="col-form-label">Card Creation Date:</label>
                                <input type="date" class="form-control" id="cardCreationDate">
                            </div> -->
                            <div class="form-group">
                                <label for="cardDueDate" class="col-form-label">Card Due Date:</label>
                                <input type="date" class="form-control" id="cardDueDate">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"
                            id="closecard">Close</button>
                        <button type="button" class="btn btn-primary" id="submitCard">Submit</button>
                    </div>
                </div>
            </div>
        </div>


    </div>


